<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstclickAddFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/edt_firstClickFragment_subjName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint= "Subjec Name " />
    <EditText
        android:id="@+id/edt_firstClickFragment_subjPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint= "Subject Priority from 1 to 10" />

    <EditText
        android:id="@+id/edt_firstClickFragment_dayPerWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint= "How many days per week?" />

    <EditText
        android:id="@+id/edt_firstClickFragment_hourPerDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint= "Hours per dat " />



</LinearLayout>